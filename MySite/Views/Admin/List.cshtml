@model IEnumerable<Post>

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "All Post";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Name</th>
        <th class="text-right">Time</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.Id</td>
            <td>@item.NamePost</td>
            <td class="text-right">@item.Time</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Edit</a>
                    <input type="hidden" name="id" value="@item.Id"/>
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a class="btn btn-primary" asp-action="Create">Add Post</a>
    @if (Model.Count() == 0)
    {
        <form asp-action="SeedDataBase" method="post">
            <button type="submit" class="btn btn-danger">Seed Data</button>
        </form>
    }
</div>
