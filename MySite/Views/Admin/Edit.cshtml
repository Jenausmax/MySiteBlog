@model Post

@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Edit Post";
}

<form asp-action="Edit" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="NamePost"></label>
        <div><span asp-validation-for="NamePost" class="text-danger"></span></div>
        <input asp-for="NamePost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DescriptionPost"></label>
        <div><span asp-validation-for="DescriptionPost" class="text-danger"></span></div>
        <textarea asp-for="DescriptionPost" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <div><span asp-validation-for="Time" class="text-danger"></span></div>
        <input asp-for="Time" class="form-control" />
    </div>
    <form asp-action="Edit" asp-controller="Admin" method="post" enctype="multipart/form-data">
        <input type="file" name="uploadedFile" /><br>
        <input type="submit" value="Загрузить" />
    </form>
    
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
